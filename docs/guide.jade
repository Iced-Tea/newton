extends _layout

mixin section(level, name, title)
  a(name=name)
  case level
    when 1: h1 #{title}
    when 2: h2 #{title}
    when 3: h3 #{title}
  if block
    block

block nav
  h1 Guide
  h2= test
  ul

    li: a(href='#hello') Hello, World
      ul
        li: a(href='#install') Install the library
        li: a(href='#simulation') Create a simulation
        li: a(href='#particle') Add a particle
        li: a(href='#render') Render the scene
        li: a(href='#demo_hello') Demo: Hello, World

    li: a(href='#basics') The basics
      ul
        li: a(href='#particles') Particles
        li: a(href='#forces') Forces
        li: a(href='#constraints') Constraints
        li: a(href='#demo_basics') Demo: Rope

    li: a(href='#behavior') Behavior
      ul
        li: a(href='#bodies') Bodies
        li: a(href='#extending_body') Extending Body
        li: a(href='#interaction') Interaction
        li: a(href='#events') Events
        li: a(href='#demo_behavior') Demo: Rope Weapon

block content
  +section(1, 'top', 'Guide')

  +section(2, 'hello', 'Hello, World')
  +section(3, 'install', 'Install the library')
    include guide/install
  +section(3, 'simulation', 'Create a simulation')
    include guide/simulation
  +section(3, 'particle', 'Add a particle')
  +section(3, 'render', 'Render the scene')
  +section(3, 'demo_hello', 'Demo: Hello, World')

  +section(2, 'basics', 'The basics')
  +section(3, 'particles', 'Particles')
  +section(3, 'forces', 'Forces')
  +section(3, 'constraints', 'Constraints')
  +section(3, 'demo_basics', 'Demo: Rope')

  +section(2, 'behavior', 'Behavior')
  +section(3, 'bodies', 'Bodies')
  +section(3, 'extending_body', 'Extending Body')
  +section(3, 'interaction', 'Interaction')
  +section(3, 'events', 'Events')
  +section(3, 'demo_behavior', 'Demo: Rope Weapon')
